<% provide(:title, "パスワードの再設定") %>
<h2><%= yield(:title) %></h2>

<%= form_for(@member, url: member_update_reset_path(params[:id], html: { class: "form-horizontal" })) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag :e, @member.email %>

  <%= form_password_field f, :password, '新しいパスワード', description: '半角英数字と記号を組み合わせて、8文字以上の推測されにくいものをご入力ください。' %>
  <%= form_password_field f, :password_confirmation, '新しいパスワード(確認)' %>

  <%= form_submit f, '更新する' %>
<% end %>
