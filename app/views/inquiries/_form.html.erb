<%= form_for(inquiry, url: inquiries_new_path, html: { class: "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :confirming %>

  <% if inquiry.confirming.blank? %>
    <div class="form-group">
      <%= f.label :experiment_id, "問い合わせ先", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.select :experiment_id,
                     options_for_select(experiments, selected: inquiry.experiment_id), {}, { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :subject, "件名", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :subject, class: 'form-control validation', required: true %>
        <span class="help-block"><span class="label label-default">例</span>実験日時変更について</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :body, "本文", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :body, class: 'form-control validation', required: true %>
        <span class="help-block"><span class="label label-default">例</span>4/1 10:00～を予定していましたが、12:00～に変更できますか？</span>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-8">
      <%= submit_tag "内容を確認する", class: "form-control btn btn-primary" %>
    </div>

  <% else %>
    <table>
      <tr>
        <th>問い合わせ先</th>
        <td><%= name %></td>
      </tr>
      <tr>
        <th>件名</th>
        <td><%= inquiry.subject %></td>
      </tr>
      <tr>
        <th>本文</th>
        <td><%= inquiry.body %></td>
      </tr>
    </table>
    <%= f.hidden_field :experiment_id %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :body %>
    <br>
    <p>以上の内容で問い合わせをします。</p>
    <div class="col-sm-offset-2 col-sm-8">
      <%= submit_tag "送信する", class: "form-control btn btn-primary" %>
    </div>
  <% end %>
<% end %>
