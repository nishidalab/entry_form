<% provide(:title, '送信メッセージ一覧') %>
<h2><%= yield(:title)%></h2>
<% @inquiries.each do |q| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= simple_format(h(q.experiment.name)) %>
      <h3><%= h(q.subject) %></h3>
    </div>
    <div class="panel-body">
      <%= simple_format(h(q.body)) %>
    </div>
    <div class="panel-footer">
      <p>送信日時: <%= h(q.created_at) %></p>
    </div>
  </div>
<% end %>